{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "pretty": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "declaration": true,
    "lib": ["es2017", "es7", "es6", "dom"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/tests/*", "build"]
}
